{
  "name": "vulnscan-ext",
  "displayName": "VulnScan_ext",
  "description": "Security scanner + AI enrichment",
  "version": "0.0.1",
  "engines": { "vscode": "^1.104.0" },
  "categories": ["Other"],

  "activationEvents": ["onCommand:sec.scan"],
  "main": "./dist/extension.js",

  "contributes": {
    "commands": [
      { "command": "sec.scan", "title": "Security: Scan Workspace" },
      { "command": "sec.exportReport", "title": "Security: Export Report (Markdown)" }
    ],
    "configuration": {
      "title": "VulnScan",
      "properties": {
        "vulnscan.targetDirectory": {
          "type": "string",
          "enum": ["auto", "app", "root"],
          "default": "auto",
          "description": "Qué carpeta escanear: 'auto' (usa app/ si existe), 'app' o 'root' (raíz del workspace)."
        },
        "vulnscan.minSeverity": {
          "type": "string",
          "enum": ["info", "low", "medium", "high", "critical"],
          "default": "low",
          "description": "Severidad mínima a mostrar (y enriquecer)."
        },
        "vulnscan.semgrep.configs": {
          "type": "array",
          "items": { "type": "string" },
          "default": ["p/owasp-top-ten", "p/ruby"],
          "description": "Listado de configuraciones/reglas de Semgrep."
        },
        "vulnscan.batchSize": {
          "type": "number",
          "default": 60,
          "minimum": 10,
          "description": "Número de archivos por lote para mostrar progreso real."
        },
        "vulnscan.timeoutSec": {
          "type": "number",
          "default": 60,
          "minimum": 10,
          "description": "Timeout por ejecución de Semgrep (segundos)."
        },
        "vulnscan.allowedExtensions": {
          "type": "array",
          "items": { "type": "string" },
          "default": [".rb", ".py", ".js", ".jsx", ".ts", ".tsx"],
          "description": "Extensiones de archivo a analizar."
        },
        "vulnscan.enrich.concurrency": {
          "type": "number",
          "default": 3,
          "minimum": 1,
          "maximum": 8,
          "description": "Máximo de findings enriquecidos en paralelo."
        }
      }
    }
  },

  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },

  "devDependencies": {
    "@types/vscode": "^1.104.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.34.0",
    "esbuild": "^0.25.9",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  },

  "dependencies": {
    "dotenv": "^17.2.2",
    "openai": "^5.20.2"
  }
}
